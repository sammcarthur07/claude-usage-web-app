{
  "name": "Claude Usage Monitor",
  "short_name": "Claude Monitor",
  "description": "Track your Claude AI usage with real-time statistics, secure Google authentication, and complete offline support",
  "start_url": "/",
  "id": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#2C3E50",
  "background_color": "#ECF0F1",
  "lang": "en-US",
  "scope": "/",
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone"],
  "categories": ["productivity", "utilities", "business"],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View usage statistics",
      "url": "/?view=dashboard",
      "icons": [
        {
          "src": "assets/icons/icon-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Login",
      "short_name": "Login",
      "description": "Sign in to your account",
      "url": "/?view=login",
      "icons": [
        {
          "src": "assets/icons/icon-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "icons": [
    {
      "src": "assets/icons/icon-72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/icons/icon-96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/icons/icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/icons/icon-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/icons/icon-152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshots/dashboard-mobile.png",
      "sizes": "412x915",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard on Samsung S23 Ultra"
    },
    {
      "src": "assets/screenshots/login-mobile.png", 
      "sizes": "412x915",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Google Sign-In on mobile"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+claudeusage",
      "url": "/?usage=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/?import=true",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".log", ".txt"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/?share=true",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "usage_data",
          "accept": ["application/json", "text/plain", "text/csv"]
        }
      ]
    }
  }
}